  {
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
      "config:recommended",
      ":separateMajorReleases",
      "schedule:weekly"
    ],
    "dependencyDashboard": true,
    "lockFileMaintenance": {
      "enabled": true,
      "automerge": true
    },
    "nix": {
      "enabled": true
    },
    "packageRules": [
      {
        "matchManagers": [
          "nix"
        ],
        "groupName": "nix dependencies"
      }
    ]
  }
